<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplicationagain">

    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="736dp"
        android:background="@drawable/white"
        android:orientation="vertical"
        android:padding="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-6dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send InterCity a message!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/browser_actions_title_color"
        android:textSize="30sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="60dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="info@intercity.com.na"
        android:background="@drawable/bg_round"
        android:inputType="textEmailAddress"
        android:lines="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Name:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="120dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Angeline"
        android:background="@drawable/bg_round"
        android:lines="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="160dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Surname:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="180dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textsna"
        android:layout_width="match_parent"
        android:text="Mukamana"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round"
        android:lines="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="220dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Date Of Birth:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="240dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textdob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="31 December 1998"
        android:background="@drawable/bg_round"
        android:lines="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="280dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Text Box:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="320dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/texttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I think I am your best
candidate for your team because I love working
with people, I enjoy learning anything new
and I am open to new opportunities. I
always participate and try my best to learn
from mistakes. I try to never give up and
always keep an open mind."
        android:background="@drawable/bg_round"
        android:lines="12"
        android:gravity="start|top"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="360dp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/buttonsnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round"
        android:text="Send"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="650dp"
        tools:ignore="MissingConstraints" />


LinearLayout />

androidx.constraintlayout.widget.ConstraintLayout />